@model FoodBanksMVC.Models.FoodBanksModel

<div>
	@Html.HiddenFor( model => Model.FoodBank.Id )
	@*@Html.HiddenFor( model => Model.FoodBank.Created )*@
	<input type="hidden" id="foodbank-name" name="foodbank-name" value="@Model.FoodBank.Name" />
	<div class="form-group">
		<label for="FoodBank_Name" class="col-sm-3 control-label">Name</label>
		<div class="col-sm-9">
			@Html.TextBoxFor( model => Model.FoodBank.Name, new { @class = "form-control", @placeholder = "Name", @maxlength = "" } )
		</div>
	</div>

	<div class="form-group">
		<label for="FoodBank_Addr1" class="col-sm-3 control-label">Address 1</label>
		<div class="col-sm-9">
			@Html.TextBoxFor( model => Model.FoodBank.Addr1, new { @class = "form-control", @placeholder = "Address 1", @maxlength = "" } )
		</div>
	</div>

	<div class="form-group">
		<label for="FoodBank_Addr2" class="col-sm-3 control-label">Address 2</label>
		<div class="col-sm-9">
			@Html.TextBoxFor( model => Model.FoodBank.Addr2, new { @class = "form-control", @placeholder = "Address 2", @maxlength = "" } )
		</div>
	</div>

	<div class="form-group">
		<label for="FoodBank_City" class="col-sm-3 control-label">City</label>
		<div class="col-sm-9">
			@Html.TextBoxFor( model => Model.FoodBank.City, new { @class = "form-control", @placeholder = "City", @maxlength = "" } )
		</div>
	</div>

	<div class="form-group">
		<label for="FoodBank_State" class="col-sm-3 control-label">State</label>
		<div class="col-sm-9">
			@Html.TextBoxFor( model => Model.FoodBank.State, new { @class = "form-control", @placeholder = "State", @maxlength = "2" } )
		</div>
	</div>

	<div class="form-group">
		<label for="FoodBank_Postal" class="col-sm-3 control-label">Postal Code</label>
		<div class="col-sm-9">
			@Html.TextBoxFor( model => Model.FoodBank.Postal, new { @class = "form-control", @placeholder = "Postal Code", @maxlength = "" } )
		</div>
	</div>
</div>
