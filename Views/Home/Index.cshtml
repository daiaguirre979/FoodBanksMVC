@model FoodBanksMVC.Models.HomeModel

@{
	ViewBag.Title = "Food Banks MVC";
	Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
	<div class="row">
		<div class="col-md-4 text-center">
			<div class="circle circle-blue center-block">
				<i class="fa fa-4x fa-building" style="margin-top: 30%;"></i>
			</div>
			<h3>Food Banks</h3>
			<span>@Model.TotalFoodBanks</span>
			<div><a href="~/FoodBanks/" class="btn btn-default">View Food Banks</a></div>
		</div>

		<div class="col-md-4 text-center">
			<div class="circle circle-blue center-block">
				<i class="fa fa-4x fa-users" style="margin-top: 30%;"></i>
			</div>
			<h3>Volunteers</h3>
			<span>@Model.TotalVolunteers</span>
			<div><a href="~/Volunteers/" class="btn btn-default">View Food Bank Volunteers</a></div>
		</div>
		
		<div class="col-md-4 text-center">
			<div class="circle circle-blue center-block">
				<i class="fa fa-4x fa-gift" style="margin-top: 30%;"></i>
			</div>
			<h3>Donations</h3>
			<span>@Model.TotalDonations</span>
			<div><a href="~/Donations/" class="btn btn-default">View Food Bank Donations</a></div>
		</div>
	</div>
</div>
