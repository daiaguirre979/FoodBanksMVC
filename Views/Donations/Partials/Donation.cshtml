@model FoodBanksMVC.Models.DonationsModel

<div>
    @Html.HiddenFor( model => Model.Donation.Id )
    
    <input type="hidden" id="Donation-name" name="Donation-name" value="@Model.Donation.Item" />
    <div class="form-group">
        <label for="Donation_Item" class="col-sm-3 control-label">Item</label>
        <div class="col-sm-9">
            @Html.TextBoxFor( model => Model.Donation.Item, new { @class = "form-control", @placeholder = "Item", @maxlength = "" } )
            @*@Html.ValidationMessageFor( model => Model.Donation.Item, "", new { @style = "border: 1px solid red;" } )*@
        </div>
    </div>

    <div class="form-group">
        <label for="Donation_Quantity" class="col-sm-3 control-label">Quantity</label>
        <div class="col-sm-9">
            @Html.TextBoxFor( model => Model.Donation.Quantity, new { @class = "form-control", @placeholder = "Quantity", @maxlength = "", @style = "width: 30%;" } )
        </div>
    </div>

    <div class="form-group">
        <label for="Donation_Quality" class="col-sm-3 control-label">Quality</label>
        <div class="col-sm-9">
            @Html.TextBoxFor( model => Model.Donation.Quality, new { @class = "form-control", @placeholder = "Quality", @maxlength = "", @style = "width: 30%;" } )
        </div>
    </div>

    <div class="form-group">
        <label for="Volunteer_Addr2" class="col-sm-3 control-label">Food Bank</label>
        <div class="col-sm-9">
            @Html.DropDownListFor( model => Model.Donation.FoodBankId, Model.GetFoodBanks(), new { @class = "form-control", @style = "width: 75%;" } )
        </div>
    </div>

    <div class="form-group">
        <label for="Volunteer_Addr2" class="col-sm-3 control-label">Volunteer</label>
        <div class="col-sm-9">
            @Html.DropDownListFor( model => Model.Donation.VolunteerId, Model.GetVolunteers(), new { @class = "form-control", @style = "width: 75%;" } )
        </div>
    </div>
</div>

